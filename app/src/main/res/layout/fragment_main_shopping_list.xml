<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MainShoppingListFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/shopping_list_item"
            app:layout_constraintBottom_toTopOf="@id/fb_main_list"

            />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_main_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/blue_200"
        android:layout_margin="10dp"
        android:src="@drawable/ic_add_24"
        android:contentDescription="@string/create_a_new_list" />

</androidx.constraintlayout.widget.ConstraintLayout>